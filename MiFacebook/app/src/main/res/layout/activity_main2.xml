<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center_horizontal"
        android:text="Facebook"
        android:textSize="20sp"
        android:layout_weight="1.5"
        />



    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Número de celular o correo electrónico"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f2f2f2"
        android:ems="10"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:textSize="15sp"
        android:text="Contraseña"
        android:layout_marginHorizontal="4dp"
        android:textColor="@color/black"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f2f2f2"
        android:inputType="textPassword"
        android:layout_weight="1"
        android:layout_marginHorizontal="4dp"/>

    <Button
        android:id="@+id/btn_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        android:backgroundTint="@color/azul"
        android:text="Iniciar Sesión"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/enlace_olvida_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginVertical="5dp"
        android:textColor="@color/azul"
        android:text="¿Olvidaste tu contraseña?"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:text="o"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_crear_cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:backgroundTint="#149414"
        android:text="Crear Cuenta Nueva"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Español"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English (US)"
        android:textColor="@color/azul"
        android:layout_margin="8dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Français (France)"
        android:textColor="@color/azul"
        android:layout_margin="8dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Português (Brasil)"
        android:textColor="@color/azul"
        android:layout_margin="8dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="中文（中国)"
        android:textColor="@color/azul"
        android:layout_margin="8dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Italiano"
        android:textColor="@color/azul"
        android:layout_margin="8dp"
        android:layout_weight=".5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mas idiomas"
        android:textColor="@color/azul"
        android:layout_margin="4dp"
        android:layout_weight=".5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="5"/>
    <!--hola-->
</LinearLayout>